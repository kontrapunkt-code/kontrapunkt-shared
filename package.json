{
	"author": "Kontrapunkt",
	"bin": {
		"kp-shared": "dist/index.js"
	},
	"description": "Shared configuration files and utilities for Kontrapunkt projects built with 100% Bun APIs",
	"devDependencies": {
		"@types/bun": "latest",
		"prettier": "^3.5.2",
		"typescript": "^5.7.3"
	},
	"engines": {
		"bun": ">=1.0.0"
	},
	"files": [
		"dist",
		"shared"
	],
	"keywords": [
		"kontrapunkt",
		"shared",
		"config",
		"bun"
	],
	"license": "MIT",
	"main": "dist/index.js",
	"module": "index.ts",
	"name": "@kontrapunkt/shared",
	"peerDependencies": {
		"bun": ">=1.0.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "bun build ./index.ts --outdir ./dist --target node && bun run build:types && bun run copy-shared",
		"build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
		"copy-shared": "mkdir -p dist/shared && cp -r shared/. dist/shared/",
		"prepublishOnly": "bun run sync-version && bun run build",
		"sync-version": "node scripts/sync-version.js",
		"test": "bun test"
	},
	"type": "module",
	"types": "dist/index.d.ts",
	"version": "0.1.8"
}
